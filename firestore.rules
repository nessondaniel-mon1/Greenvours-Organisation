rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Function to check if the requesting user is an admin
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Allow users to create and manage their own user document
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read, update: if request.auth.uid == userId || isAdmin();
    }

    // Allow public read access to all collections
    match /{collection}/{document} {
      allow read: if true;
      // Allow write access only to authenticated administrators
      allow write: if isAdmin();
    }

    // Special rule for the 'admins' collection: only admins can write to it
    // This allows an initial admin to be added, and then only existing admins can add/remove others.
    match /admins/{userId} {
      allow read: if isAdmin(); // Admins can read other admins
      allow write: if isAdmin(); // Admins can add/remove other admins
    }
  }
}